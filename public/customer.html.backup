    <script>
        console.log("Firebase config loaded, db available:", window.db ? "Yes" : "No");
        console.log("Quick register function available:", typeof showQuickRegisterModal);
    </script>    <script src="js/customer.js"></script>
    <script src="js/export.js"></script>
    <script>
        // ログアウト機能
        function logout() {
            if (confirm('ログアウトしますか？')) {
                window.location.href = 'login.html';
            }
        }

        // フィルタークリア
        function clearFilters() {
            document.getElementById('searchInput').value = '';
            document.getElementById('statusFilter').value = '';
            document.getElementById('sortBy').value = 'updatedAt';
            if (window.customerManager) {
                customerManager.applyFilters();
            }
        }
    </script>
    <!-- モバイルデバッグ情報 -->
    <div id="mobileDebug" class="mobile-debug">
        デバイス: <span id="deviceType"></span><br>
        画面: <span id="screenSize"></span>
    <!-- モバイルデバッグ情報 -->
    <div id="mobileDebug" class="mobile-debug">
        デバイス: <span id="deviceType"></span><br>
        画面: <span id="screenSize"></span>
    <script>
        // デバッグ情報表示
        document.addEventListener("DOMContentLoaded", function() {
            console.log("=== RentPipe Debug Info ===");
            console.log("Firebase db:", window.db ? "Available" : "Not available");
            console.log("showQuickRegisterModal:", typeof window.showQuickRegisterModal);
            console.log("customerManager:", typeof window.customerManager);
            console.log("dataExporter:", typeof window.dataExporter);
            
            // クイック登録ボタンのテスト
            setTimeout(() => {
                const quickBtn = document.querySelector("button[onclick*='showQuickRegisterModal']");
                if (quickBtn) {
                    console.log("Quick register button found:", quickBtn);
                } else {
                    console.log("Quick register button NOT found");
                }
            }, 1000);
        });
        
        // 手動テスト用関数
        function testQuickRegister() {
            if (typeof window.showQuickRegisterModal === "function") {
                window.showQuickRegisterModal();
            } else {
                alert("showQuickRegisterModal関数が利用できません");
            }
        }
        
        window.testQuickRegister = testQuickRegister;
    <script>
        // クイック登録機能を直接定義（確実な動作のため）
        function showQuickRegisterModal() {
            console.log("showQuickRegisterModal called from inline script");
            
            // 既存のモーダルがあれば削除
            const existingModal = document.getElementById("quickRegisterModal");
            if (existingModal) {
                existingModal.remove();
            }
            
            const modal = document.createElement("div");
            modal.id = "quickRegisterModal";
            modal.className = "modal";
            modal.style.display = "flex";
            
            modal.innerHTML = `
                <div class="modal-content">
                    <div class="modal-header">
                        <h2>⚡ クイック登録</h2>
                        <p style="margin: 8px 0 0 0; font-size: 14px; color: #64748b;">
                            電話中に素早く基本情報を登録できます
                        </p>
                        <button onclick="closeQuickRegisterModal()" class="btn-close" type="button">×</button>
                    </div>
                    
                    <form id="quickRegisterForm">
                        <div class="form-grid">
                            <div class="form-group full-width">
                                <label for="quickName" class="form-label required">お名前</label>
                                <input type="text" id="quickName" name="name" class="form-input" required 
                                       placeholder="例: 田中太郎">
                            </div>
                            
                            <div class="form-group">
                                <label for="quickEmail" class="form-label">メールアドレス</label>
                                <input type="email" id="quickEmail" name="email" class="form-input" 
                                       placeholder="例: tanaka@example.com">
                            </div>
                            
                            <div class="form-group">
                                <label for="quickPhone" class="form-label required">電話番号</label>
                                <input type="tel" id="quickPhone" name="phone" class="form-input" required
                                       placeholder="例: 090-1234-5678">
                            </div>
                            
                            <div class="form-group full-width">
                                <label for="quickNotes" class="form-label">メモ・要望</label>
                                <textarea id="quickNotes" name="notes" class="form-input" rows="3" 
                                          placeholder="例: 急ぎで物件をお探し。渋谷エリア希望。"></textarea>
                            </div>
                        </div>
                        
                        <div class="quick-register-info">
                            <p>💡 <strong>ヒント:</strong> 基本情報のみ登録して、詳細は後で編集できます</p>
                            <p>📝 完全な顧客フォームは「詳細フォーム」ボタンから顧客に送信できます</p>
                        </div>
                        
                        <div class="modal-actions">
                            <button type="button" onclick="closeQuickRegisterModal()" class="btn btn-outline">キャンセル</button>
                            <button type="submit" class="btn btn-primary">⚡ 登録する</button>
                        </div>
                    </form>
                </div>
            `;
            
            document.body.appendChild(modal);
            
            // フォーム送信イベント
            const form = document.getElementById("quickRegisterForm");
            if (form) {
                form.addEventListener("submit", async (e) => {
                    e.preventDefault();
                    await submitQuickRegister();
                });
            }
            
            console.log("Quick register modal created successfully");
        }
        
        function closeQuickRegisterModal() {
            const modal = document.getElementById("quickRegisterModal");
            if (modal) {
                modal.remove();
            }
        }
        
        async function submitQuickRegister() {
            try {
                console.log("Submitting quick register form");
                
                const formData = new FormData(document.getElementById("quickRegisterForm"));
                
                const customerData = {
                    name: formData.get("name"),
                    email: formData.get("email"),
                    phone: formData.get("phone"),
                    notes: formData.get("notes"),
                    pipelineStatus: "初回相談",
                    createdAt: new Date(),
                    updatedAt: new Date(),
                    source: "quick_register",
                    id: `quick-${Date.now()}`,
                    age: null,
                    occupation: "",
                    annualIncome: null,
                    preferences: {
                        budgetMin: null,
                        budgetMax: null,
                        areas: [],
                        roomType: "",
                        requirements: []
                    }
                };
                
                // バリデーション
                if (!customerData.name || !customerData.phone) {
                    alert("名前と電話番号は必須です。");
                    return;
                }
                
                // データ保存
                console.log("クイック登録データ:", customerData);
                
                // ローカルストレージに保存（デモ用）
                const existingCustomers = JSON.parse(localStorage.getItem("demoCustomers") || "[]");
                existingCustomers.push(customerData);
                localStorage.setItem("demoCustomers", JSON.stringify(existingCustomers));
                
                // 顧客リストを更新
                if (window.customerManager && window.customerManager.customers) {
                    window.customerManager.customers.push(customerData);
                    if (typeof window.customerManager.renderCustomers === "function") {
                        window.customerManager.renderCustomers();
                    }
                    if (typeof window.customerManager.updateStats === "function") {
                        window.customerManager.updateStats();
                    }
                }
                
                // 成功メッセージ
                alert(`${customerData.name} 様をクイック登録しました！\n詳細情報は後で編集できます。`);
                
                // モーダルを閉じる
                closeQuickRegisterModal();
                
                // ページリロード（確実にリストを更新）
                window.location.reload();
                
            } catch (error) {
                console.error("クイック登録エラー:", error);
                alert("クイック登録に失敗しました。もう一度お試しください。");
            }
        }
        
        // グローバルに設定
        window.showQuickRegisterModal = showQuickRegisterModal;
        window.closeQuickRegisterModal = closeQuickRegisterModal;
        window.submitQuickRegister = submitQuickRegister;
        
        console.log("Quick register functions defined inline");
    <script>
        function debugQuickRegister() {
            console.log("=== クイック登録デバッグ ===");
            console.log("showQuickRegisterModal type:", typeof showQuickRegisterModal);
            console.log("closeQuickRegisterModal type:", typeof closeQuickRegisterModal);
            console.log("submitQuickRegister type:", typeof submitQuickRegister);
            
            if (typeof showQuickRegisterModal === "function") {
                alert("✅ 関数は正常に定義されています。クイック登録を開きます。");
                showQuickRegisterModal();
            } else {
                alert("❌ showQuickRegisterModal関数が定義されていません。");
            }
        }
        
        window.debugQuickRegister = debugQuickRegister;
    </script>    </script>    </script>    </div>    </div></body>
