    <!-- スクリプト読み込み -->
    <script src="js/create-test-customers.js"></script>
    <script src="js/customer-data-loader.js"></script>
    
    <!-- Google Apps Script統合 -->
    <script src="js/google-apps-script-forms.js"></script>
    <script src="js/customer-gas-integration.js"></script>
    
    <script>
        // ページ初期化
        document.addEventListener('DOMContentLoaded', async function() {
            console.log('🚀 顧客管理ページ初期化開始（Google Apps Script版）');
            
            try {
                // 顧客データ読み込み
                setTimeout(() => {
                    window.loadAndDisplayCustomers();
                }, 500);
                
                console.log('✅ 顧客管理ページ初期化完了（Google Apps Script版）');
            } catch (error) {
                console.error('❌ 初期化エラー:', error);
            }
        });
        
        // ローディング表示
        function showLoading(message, detail) {
            const overlay = document.getElementById('loading-overlay');
            const messageEl = document.getElementById('loading-message');
            const detailEl = document.getElementById('loading-detail');
            
            messageEl.textContent = message;
            detailEl.textContent = detail;
            overlay.style.display = 'flex';
        }
        
        // ローディング非表示
        function hideLoading() {
            document.getElementById('loading-overlay').style.display = 'none';
        }
    </script>
</body>
</html>
