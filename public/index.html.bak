        // æœ€è¿‘ã®æ´»å‹•ã‚’æ›´æ–°
        function updateRecentActivities(activities) {
            const container = document.getElementById('recentActivities');
            
            if (activities.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <span class="empty-icon">ğŸ“‹</span>
                        <p>ã¾ã æ´»å‹•å±¥æ­´ãŒã‚ã‚Šã¾ã›ã‚“</p>
                    </div>
