<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>料金プランテスト</title>
    <style>
        body { font-family: Arial, sans-serif; padding: 20px; }
        .test-result { margin: 10px 0; padding: 10px; background: #f0f0f0; }
        .plan-card { border: 1px solid #ccc; margin: 10px; padding: 20px; width: 200px; display: inline-block; }
        .plan-name { font-size: 18px; font-weight: bold; }
        .plan-price { font-size: 16px; color: blue; }
    </style>
</head>
<body>
    <h1>料金プランテスト</h1>
    <div id="testResults"></div>
    <div id="pricingGrid"></div>
    
    <script src="js/pricing-plans.js"></script>
    
    <script>
        console.log('テスト開始');
        
        function runTests() {
            const results = document.getElementById('testResults');
            
            // テスト1: pricing-plans.jsが読み込まれているか
            if (window.RentPipePlans) {
                results.innerHTML += '<div class="test-result">✅ pricing-plans.js読み込み成功</div>';
                console.log('プラン設定:', window.RentPipePlans.plans);
            } else {
                results.innerHTML += '<div class="test-result">❌ pricing-plans.js読み込み失敗</div>';
                return;
            }
            
            // テスト2: プランカード表示テスト
            const grid = document.getElementById('pricingGrid');
            Object.values(window.RentPipePlans.plans).forEach(plan => {
                const card = document.createElement('div');
                card.className = 'plan-card';
                card.innerHTML = `
                    <div class="plan-name">${plan.name}</div>
                    <div class="plan-price">${plan.price === 0 ? '無料' : plan.price + '円/月'}</div>
                    <div>顧客${plan.customerLimit}人まで</div>
                `;
                grid.appendChild(card);
            });
            
            results.innerHTML += '<div class="test-result">✅ プランカード表示テスト完了</div>';
        }
        
        document.addEventListener('DOMContentLoaded', runTests);
    </script>
</body>
</html>
